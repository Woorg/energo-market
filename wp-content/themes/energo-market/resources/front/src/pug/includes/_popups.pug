.fancybox-is-hidden#popup-request

	.popup

		button.popup__close(data-fancybox-close)
			<svg width="19" height="19" viewBox="0 0 19 19" fill="none" xmlns="http://www.w3.org/2000/svg">
				<path fill-rule="evenodd" clip-rule="evenodd" d="M18.375 1.85063L16.5244 0L9.1875 7.33687L1.85063 0L0 1.85063L7.33687 9.1875L0 16.5244L1.85063 18.375L9.1875 11.0381L16.5244 18.375L18.375 16.5244L11.0381 9.1875L18.375 1.85063Z" fill="currentColor"/>
			</svg>

		.popup__content

			span.popup__title Оставьте заявку

			.popup__form
				form(action="#").js-validate

					.ui-field
						input(type="text" name="firstname" placeholder="Имя").ui-input

					.ui-field
						input(type="tel" name="tel" placeholder="Телефон").ui-input

					.ui-field
						input(type="email" name="email" placeholder="E-mail").ui-input

					.ui-field
						textarea(name="message" placeholder="Сообщение").ui-textarea

					button.ui-btn.ui-btn--red.ui-btn--fullwidth Отправить заявку

			
